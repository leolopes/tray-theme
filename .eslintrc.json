{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["airbnb-base"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint"],
    "rules": {
        //Ignores camelcase rule because Tray variables
        "camelcase": "off",

        //Reimplement max line length. Code value need to be equal in .prettierrc.json file
        "max-len": [
            "error",
            {
                "code": 120,
                "tabWidth": 4,
                "ignoreUrls": true,
                "ignoreComments": true,
                "ignoreRegExpLiterals": true,
                "ignoreStrings": true,
                "ignoreTemplateLiterals": true
            }
        ],

        // Indentation config to 4 spaces
        "indent": ["error", 4],

        // Force use empty line before and after blocks
        "padded-blocks": [
            "error",
            "always",
            {
                "allowSingleLineBlocks": true
            }
        ],

        // Allow use of unary operators
        "no-plusplus": "off",

        "no-restricted-syntax" : "off",

        // Allow console instructions
        "no-console": "off",

        // Allow single lines be together on classes
        "lines-between-class-members": ["error", "always", { "exceptAfterSingleLine": true }],

        // Disable export default requirement
        "import/prefer-default-export": "off",

        "import/no-unresolved": "off",
        "import/extensions": [
            "error",
            "never",
            {
                "json": "always"
            }
        ]
    }
}
